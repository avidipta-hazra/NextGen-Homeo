<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ========================= -->
    <!-- Main App Theme -->
    <!-- ========================= -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary green color -->
        <item name="colorPrimary">#007D16</item>
        <item name="colorPrimaryVariant">#007D16</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors (can stay as-is) -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- STATUS BAR (HEAD COLOR) -->
        <item name="android:statusBarColor">#007D16</item>

    </style>

    <!-- ========================= -->
    <!-- Splash Screen Theme -->
    <!-- ========================= -->
    <style name="Theme.MyApplication.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

</resources>
